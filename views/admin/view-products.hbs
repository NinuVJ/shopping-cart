<section>
    <div class="container">
      <div class="row m-4">
        <a href="/admin/add-products/" class="btn btn-success ml-auto">Add Product</a>
      </div>
        <table class="table table-striped mt-4" id="productsTable">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Author</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
      <th>Options</th>

    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row"></th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Author}}</td>
      <td>â‚¹{{this.Price}}</td>
      <td><img style="height: 50px;width:50px;" 
      src="/product-images/{{this._id}}.jpg"></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete? {{this.Name}}')">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>

<script>

  var table = document.getElementsByTagName('table')[0],
  rows = table.getElementsByTagName('tr'),
  text = 'textContent' in document ? 'textContent' : 'innerText';

for (var i = 1, len = rows.length; i < len; i++) {
  rows[i].children[0][text] = i + rows[i].children[0][text];
}

  $( function () {
    $('#productsTable').DataTable();
} );
</script>
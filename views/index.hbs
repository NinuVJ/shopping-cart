<section>
        <div class="container mt-5">

        <div class="row">
            {{#each products}}
            <div class="col-md-3">
                <div class="card" style="width: 15rem; height: 30rem; padding: 20px;">
                    <img style="height: 300px;width:200px;" class="card-img-top" src="{{this.image}}" alt="Card image cap">
                    <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <h6 class="card-subtitle">{{this.author}}</h6>
                    <p class="card-text">{{this.price}}</p>
                    <a href="#" class="btn btn-primary">Add to cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
            
        </div>
        </div>
</section>
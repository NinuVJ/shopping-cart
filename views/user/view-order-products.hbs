<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
             
                <div class="col-md-3 m-4">
                    <div class="card d-flex justify-content-center" 
                    style="width: 15rem; height: 25rem; padding: 20px;">
                        <img class="rounded mx-auto d-block card-img-top"
                            src="/product-images/{{this.product._id}}.jpg"
                            alt="card image cap"
                             style="height: 10rpm;width: 10rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.product.Name}}</h5>
                            <h6 class="card-subtitle">{{this.product.Author}}</h6>
                            <p class="card-text">Rs.{{this.product.Price}}</p>
                            <p class="card-text">Quantity:{{this.quantity}}</p>
                        </div>    
                    </div>
                </div>
            {{/each}}    
        </div>
    </div>
</section>

